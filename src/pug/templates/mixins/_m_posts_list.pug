mixin posts_list(dataList)
	.posts_list
		.posts_list__body
			a.posts_list__heading(href='#' call)
				span.posts_list__heading_icon
					+icon( `${dataList.icon}`, 'icon--size_mod')
				span.posts_list__heading_title= dataList.title
		ul.posts_list__list
			each itemList in dataList.link
				li.posts_list__item
					a.posts_list__link(href="#")= itemList
