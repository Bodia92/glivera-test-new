mixin posts_list(title, icon, ...items)
	.posts_list
		.posts_list__body
			a.posts_list__heading(href='#' call)
				span.posts_list__heading_icon
					+icon(`${icon}`, 'icon--size_mod')
				span.posts_list__heading_title= title
		ul.posts_list__list
			each item in items
				li.posts_list__item
					a.posts_list__link(href="#")= item
